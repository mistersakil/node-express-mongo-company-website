<%- include("../layout/header") %>
<div class="row grid-margin">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <%- include("../partials/top-link") %>
                <% if(Object.keys(errors).length || errors.message){ %>
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>
                        <%=  errors.message || 'Please fix following errors' %>
                    </strong>
                </div>
                <% } %>
                <% if(success){ %>
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>User created successfully</strong>
                </div>
                <% } %>
                <form method="post" action="<%= create %>">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="name" class="col-form-label">Full Name <sup title="Required"><i class="fa fa-star text-danger"></i></sup> </label>
                        </div>
                        <div class="col-lg-8">
                            <input id="name" class="form-control" maxlength="50" name="name" type="text" value="<%= formData.name %>" />
                            <% if(errors.name){ %>
                            <label class="error mt-2 text-danger" for="name">
                                <%=errors.name %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="name">Full name required, minimum 5 characters. Ex: Sakil Jomaddar</label>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="mobile" class="col-form-label">Mobile <sup title="Required"><i class="fa fa-star text-danger"></i></sup> </label>
                        </div>
                        <div class="col-lg-8">
                            <input id="mobile" class="form-control" maxlength="50" name="mobile" type="text" value="<%= formData.mobile %>" />
                            <% if(errors.mobile){ %>
                            <label class="error mt-2 text-danger" for="mobile">
                                <%=errors.mobile %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="mobile">Mobile number required, minimum 11 characters. Ex: +88 01720092787</label>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="email" class="col-form-label">Email <sup title="Required"><i class="fa fa-star text-danger"></i></sup> </label>
                        </div>
                        <div class="col-lg-8">
                            <input id="email" class="form-control" maxlength="50" name="email" type="text" value="<%= formData.email %>" />
                            <% if(errors.email){ %>
                            <label class="error mt-2 text-danger" for="email">
                                <%=errors.email %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="email">Email required, valid email, minimum 10 characters. Ex: example@domain.com</label>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="password" class="col-form-label">Password <sup title="Required"><i class="fa fa-star text-danger"></i></sup> </label>
                        </div>
                        <div class="col-lg-5">
                            <input id="password" class="form-control" maxlength="50" name="password" type="password" value="<%= formData.password %>" />
                            <% if(errors.password){ %>
                            <label class="error mt-2 text-danger" for="password">
                                <%=errors.password %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="password">Password required, minimum 5 characters. Ex: pass@24</label>
                            <% } %>
                        </div>
                        <div class="col-lg-3">
                            <input id="confirmPassword" class="form-control" maxlength="50" name="confirmPassword" type="password" value="<%= formData.confirmPassword %>" />
                            <% if(errors.confirmPassword){ %>
                            <label class="error mt-2 text-danger" for="confirmPassword">
                                <%=errors.confirmPassword %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="confirmPassword">Confirm your password required</label>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label for="userType" class="col-form-label">User Type <sup title="Required"><i class="fa fa-star text-danger"></i></sup> </label>
                        </div>
                        <div class="col-lg-8">
                            <select class="form-control">
                                <option value="9">Admin</option>
                                <option value="8">Manager</option>
                                <option value="7" selected>Author</option>
                                <option value="6">Editor</option>
                                <option value="1">User</option>
                            </select>
                            <% if(errors.userType){ %>
                            <label class="error mt-2 text-danger" for="userType">
                                <%=errors.userType %>
                            </label>
                            <% }else{ %>
                            <label class="error mt-2 text-secondary" for="userType">User Type required</label>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-8 offset-md-3">
                            <input class="btn btn-secondary btn-block" type="submit" value="Save" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("../layout/footer") %>
<%- include("../layout/close") %>
